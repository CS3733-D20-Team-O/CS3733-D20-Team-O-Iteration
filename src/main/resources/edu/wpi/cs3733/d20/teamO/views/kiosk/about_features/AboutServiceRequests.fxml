<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<AnchorPane xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="edu.wpi.cs3733.d20.teamO.view_model.kiosk.about_features.AboutServiceRequests">

  <!-- Main Welcome Bar -->
  <StackPane fx:id="useServReq" prefHeight="64"
    styleClass="topBar"
    AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
    <Label style="-fx-font-size: 32; -fx-text-fill: floralwhite" text="%helpSRTitle"/>
  </StackPane>

  <StackPane fx:id="container" alignment="CENTER_LEFT" AnchorPane.TopAnchor="65"
    AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="25.0" AnchorPane.rightAnchor="25.0">
    <VBox alignment="CENTER_LEFT" prefHeight="400.0" prefWidth="600.0" spacing="10">
      <Label alignment="CENTER" style="-fx-font-size: 15; -fx-wrap-text: true"
        text="%helpSRDescription"/>

      <Label text="%helpSRStep1" wrapText="true"/>
      <Label text="%helpSRStep2" wrapText="true"/>
      <Label text="%helpSRStep3" wrapText="true"/>
      <Label text="%helpSRStep4" wrapText="true"/>
      <Label text="%helpSRStep5" wrapText="true"/>
      <Label text="%helpSRStep6" wrapText="true"/>
      <Label text="%helpSRStep7" wrapText="true"/>

      <HBox alignment="CENTER_RIGHT">
        <JFXButton buttonType="RAISED" onAction="#openServiceRequestSelect"
          styleClass="mainButton"
          style="-fx-font-size: 16; -fx-padding: 12; -fx-background-radius: 16"
          text="%helpSRServiceRequest">
          <HBox.margin>
            <Insets right="20.0"/>
          </HBox.margin>
        </JFXButton>
        <JFXButton buttonType="RAISED" onAction="#close"
          styleClass="mainButton"
          style="-fx-font-size: 16; -fx-padding: 12; -fx-background-radius: 16"
          text="%helpSRBack"/>
      </HBox>
    </VBox>
  </StackPane>
</AnchorPane>
