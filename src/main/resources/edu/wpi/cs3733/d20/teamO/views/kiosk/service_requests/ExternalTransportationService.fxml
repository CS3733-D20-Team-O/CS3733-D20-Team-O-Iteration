<?xml version="1.0" encoding="UTF-8"?>
<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import com.jfoenix.controls.JFXTextArea?>
<?import com.jfoenix.controls.JFXTextField?>
<?import com.jfoenix.validation.RequiredFieldValidator?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<StackPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
  fx:controller="edu.wpi.cs3733.d20.teamO.view_model.kiosk.service_requests.ExternalTransportationService">
  <VBox spacing="32" alignment="CENTER"
    style="-fx-padding: 32; -fx-background-radius: 16; -fx-font-size: 16">
    <Label text="External Transportation Service Request Creation" style="-fx-font-size: 32"/>
    <JFXTextField fx:id="requesterName" promptText="Your Name">
      <validators>
        <RequiredFieldValidator message="Your name is required!"/>
      </validators>
    </JFXTextField>
    <HBox alignment="CENTER" spacing="32">
      <JFXComboBox fx:id="floor" promptText="Floor">
        <validators>
          <RequiredFieldValidator message="You need to specify the floor you are on!"/>
        </validators>
      </JFXComboBox>
      <JFXComboBox fx:id="location" promptText="Current Room/Location">
        <validators>
          <RequiredFieldValidator message="You need to specify the room/location you are at"/>
        </validators>
      </JFXComboBox>
    </HBox>
    <JFXComboBox fx:id="transportationType" promptText="Mode of Transportation">
      <validators>
        <RequiredFieldValidator message="You need to select a mode of transportation!"/>
      </validators>
    </JFXComboBox>
    <JFXTextField fx:id="destination" promptText="Destination">
      <validators>
        <RequiredFieldValidator message="You need to enter a destination!"/>
      </validators>
    </JFXTextField>
    <JFXTextArea fx:id="additionalNotes" promptText="Additional Notes"/>
    <HBox alignment="CENTER_RIGHT" spacing="16">
      <JFXButton text="Submit" onAction="#submitRequest"/>
      <JFXButton text="Cancel" onAction="#cancelRequest"/>
    </HBox>
  </VBox>
</StackPane>
