<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import com.jfoenix.controls.JFXTextArea?>
<?import com.jfoenix.controls.JFXTextField?>
<?import com.jfoenix.validation.RequiredFieldValidator?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<StackPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="edu.wpi.cs3733.d20.teamO.view_model.kiosk.service_requests.InterpreterService">
  <VBox alignment="CENTER" spacing="32"
    style="-fx-padding: 32; -fx-background-radius: 16; -fx-font-size: 16">
    <Label style="-fx-font-size: 32" text="%serviceInterpreterDescription"/>
    <JFXTextField fx:id="requesterName" promptText="%serviceInterpreterNameField"
      style="-fx-background-color: WHITE;">
      <validators>
        <RequiredFieldValidator message="%serviceInterpreterNameValidator"/>
      </validators>
    </JFXTextField>
    <HBox alignment="CENTER" spacing="32">
      <JFXComboBox fx:id="floors" promptText="%serviceInterpreterFloorCB"
        style="-fx-background-color: WHITE;">
        <validators>
          <RequiredFieldValidator message="%serviceInterpreterFloorValidator"/>
        </validators>
      </JFXComboBox>
      <JFXComboBox fx:id="locations" promptText="%serviceInterpreterLocationCB"
        style="-fx-background-color: WHITE;">
        <validators>
          <RequiredFieldValidator message="%serviceInterpreterLocationValidator"/>
        </validators>
      </JFXComboBox>
    </HBox>
    <HBox alignment="CENTER" layoutX="42.0" layoutY="191.0" spacing="32" style="-fx-spacing: 16;">
      <children>
        <JFXComboBox fx:id="language" prefHeight="38.0" prefWidth="137.0"
          promptText="%serviceInterpreterLanguageCB"
          style="-fx-background-color: WHITE;">
          <validators>
            <RequiredFieldValidator message="%serviceInterpreterLanguageValidator"/>
          </validators>
        </JFXComboBox>
        <JFXComboBox fx:id="gender" promptText="%serviceInterpreterGenderCB"
          style="-fx-background-color: WHITE;">
          <validators>
            <RequiredFieldValidator message="%serviceInterpreterGenderValidator"/>
          </validators>
        </JFXComboBox>
      </children>
    </HBox>
    <JFXTextArea fx:id="additionalNotes" prefHeight="119.0" prefWidth="618.0"
      promptText="%serviceInterpreterNotesField" style="-fx-background-color: WHITE;"/>
    <HBox alignment="CENTER_RIGHT" spacing="16">
      <JFXButton onAction="#submitRequest" text="%serviceInterpreterSubmitButton"/>
      <JFXButton onAction="#close" text="%serviceInterpreterCancelButton"/>
    </HBox>
  </VBox>
</StackPane>
