<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import com.jfoenix.controls.JFXTextArea?>
<?import com.jfoenix.controls.JFXTextField?>
<?import com.jfoenix.validation.RequiredFieldValidator?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<StackPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="edu.wpi.cs3733.d20.teamO.view_model.kiosk.service_requests.InterpreterService">
  <VBox alignment="CENTER" spacing="32"
    style="-fx-padding: 32; -fx-background-radius: 16; -fx-font-size: 16">
    <Label style="-fx-font-size: 32" text="Interpreter Service Request Creation"/>
    <JFXTextField fx:id="requesterName" promptText="Your Name">
      <validators>
        <RequiredFieldValidator message="Your name is required!"/>
      </validators>
    </JFXTextField>
    <HBox alignment="CENTER" spacing="32">
      <JFXComboBox fx:id="floor" promptText="Floor">
        <validators>
          <RequiredFieldValidator message="You need to select the floor for the interpreter!"/>
        </validators>
      </JFXComboBox>
      <JFXComboBox fx:id="location" promptText="Room/Location on Floor">
        <validators>
          <RequiredFieldValidator message="You need to select the location for the interpreter!"/>
        </validators>
      </JFXComboBox>
    </HBox>
    <HBox alignment="CENTER" layoutX="42.0" layoutY="191.0" spacing="32">
      <children>
        <JFXComboBox fx:id="language" promptText="Language">
          <validators>
            <RequiredFieldValidator message="You need to select the floor for the interpreter!"/>
          </validators>
        </JFXComboBox>
        <JFXComboBox fx:id="gender" promptText="Preferred Gender">
          <validators>
            <RequiredFieldValidator message="You need to select the location for the interpreter!"/>
          </validators>
        </JFXComboBox>
      </children>
    </HBox>
    <JFXTextArea fx:id="additionalNotes" prefHeight="119.0" prefWidth="618.0"
      promptText="Additional Notes"/>
    <HBox alignment="CENTER_RIGHT" spacing="16">
      <JFXButton onAction="#submitRequest" text="Submit"/>
      <JFXButton onAction="#cancelRequest" text="Cancel"/>
    </HBox>
  </VBox>
</StackPane>
