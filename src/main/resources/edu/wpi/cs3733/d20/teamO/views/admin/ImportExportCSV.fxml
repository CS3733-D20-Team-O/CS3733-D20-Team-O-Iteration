<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox fx:id="root" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" spacing="32"
  xmlns:fx="http://javafx.com/fxml/1" style="-fx-padding: 32"
  fx:controller="edu.wpi.cs3733.d20.teamO.view_model.admin.ImportExportCSVViewModel">
  <Label text="Select the type of data you would like to import/export"/>
  <JFXComboBox fx:id="typeSelector"/>
  <Label text="Select the CSV file you would like to read from/write to"/>
  <JFXButton onAction="#selectFile" text="Select a file"/>
  <Label text="Currently selected file: "/>
  <Label text="${controller.fileLocation}"/>
  <HBox alignment="CENTER_RIGHT" spacing="32">
    <JFXButton fx:id="importButton" disable="true" onAction="#importData" text="Import"/>
    <JFXButton fx:id="exportButton" disable="true" onAction="#exportData" text="Export"/>
    <JFXButton fx:id="closeButton" text="Close"/>
  </HBox>
</VBox>
