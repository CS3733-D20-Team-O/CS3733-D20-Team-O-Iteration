<?xml version="1.0" encoding="UTF-8"?>
<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<StackPane xmlns:fx="http://javafx.com/fxml" style="-fx-background-color: #acd7fd"
  fx:controller="edu.wpi.cs3733.d20.teamO.view_model.admin.ImportExportCSVViewModel" fx:id="root">
  <VBox fx:id="container" spacing="32" alignment="CENTER" maxWidth="-Infinity" maxHeight="-Infinity"
    style="-fx-padding: 32; -fx-background-color: whitesmoke; -fx-background-radius: 16">
    <Label text="Select the type of data you would like to import/export"/>
    <JFXComboBox fx:id="typeSelector"/>
    <Label text="Select the CSV file you would like to read from/write to"/>
    <JFXButton onAction="#selectFile" text="Select a file"/>
    <Label text="Currently selected file: "/>
    <Label text="${controller.fileLocation}"/>
    <HBox alignment="CENTER" spacing="32">
      <JFXButton fx:id="importButton" onAction="#importData" text="Import" disable="true"/>
      <JFXButton fx:id="exportButton" onAction="#exportData" text="Export" disable="true"/>
    </HBox>
  </VBox>
</StackPane>