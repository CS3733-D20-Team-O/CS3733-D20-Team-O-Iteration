<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity"
  xmlns="http://javafx.com/javafx/11.0.1" fx:id="root" style="-fx-background-color: #acd7fd"
  fx:controller="edu.wpi.cs3733.d20.teamO.view_model.kiosk.ServiceRequestSelection">
  <HBox AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
    AnchorPane.topAnchor="0" alignment="CENTER" spacing="30.0">
    <VBox alignment="CENTER" spacing="20.0">
      <Label text="%serviceRequestCreationLabel"/>
      <JFXComboBox promptText="%serviceRequestCreationPrompt" fx:id="serviceSelector"/>
    </VBox>
    <Label text="%serviceRequestOR"/>
    <VBox alignment="CENTER" spacing="20.0">
      <Label text="%serviceRequestLookupLabel"/>
      <HBox alignment="CENTER" spacing="10.0">
        <JFXTextField fx:id="confirmationCode" promptText="%serviceRequestConfirmationNumber"/>
        <JFXButton onAction="#onSubmitClicked" text="%serviceRequestLookupSubmit"/>
      </HBox>
    </VBox>
  </HBox>
</AnchorPane>
