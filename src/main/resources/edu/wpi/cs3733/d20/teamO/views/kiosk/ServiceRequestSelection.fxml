<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity"
  xmlns="http://javafx.com/javafx/11.0.1"
  fx:controller="edu.wpi.cs3733.d20.teamO.view_model.kiosk.ServiceRequestSelection">
  <HBox AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
    AnchorPane.topAnchor="0"
    alignment="CENTER" spacing="30.0">
    <VBox alignment="CENTER" minWidth="300" spacing="20.0">
      <Label text="Create a new service request"/>
      <JFXComboBox promptText="Select a service request..." fx:id="serviceSelector"/>
    </VBox>
    <Label text="OR"/>
    <VBox alignment="CENTER" minWidth="300" spacing="20.0">
      <Label text="Lookup the status of a service request"/>
      <HBox alignment="CENTER" spacing="10.0">
        <TextField fx:id="confirmationCode"/>
        <JFXButton onAction="#onSubmitClicked" text="Submit"/>
      </HBox>
    </VBox>
  </HBox>
</AnchorPane>
