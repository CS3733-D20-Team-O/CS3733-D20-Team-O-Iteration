<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import com.jfoenix.controls.JFXListView?>
<?import com.jfoenix.controls.JFXSlider?>
<?import com.jfoenix.controls.JFXTextField?>
<?import com.jfoenix.validation.RequiredFieldValidator?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<BorderPane fx:id="root" maxHeight="720.0" maxWidth="1280.0" prefHeight="720.0" prefWidth="1280.0"
  style="-fx-background-color: #acd7fd;" xmlns="http://javafx.com/javafx/11.0.1"
  xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="edu.wpi.cs3733.d20.teamO.view_model.admin.FloorMapEditorViewModel">
   <center>
      <fx:include fx:id="nodeMapView" source="/edu/wpi/cs3733/d20/teamO/views/NodeMapView.fxml"/>
   </center>
   <right>
      <AnchorPane fx:id="sideBar" prefHeight="200.0" prefWidth="200.0"
        style="-fx-background-color: FFFFFF;" BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="TOP_CENTER" spacing="8.0">
               <padding>
                  <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
               </padding>
               <children>
                  <HBox alignment="CENTER" prefWidth="200.0" spacing="4.0">
                     <children>
                        <JFXButton onAction="#floorDownPressed" buttonType="FLAT" text="&lt;">
                           <font>
                              <Font size="18.0"/>
                           </font>
                        </JFXButton>
                        <Label fx:id="floorLabel" prefHeight="22.0" text="Floor 1">
                           <font>
                              <Font size="18.0"/>
                           </font>
                        </Label>
                        <JFXButton onAction="#floorUpPressed" buttonType="FLAT" text="&gt;">
                           <font>
                              <Font size="18.0"/>
                           </font>
                        </JFXButton>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefWidth="200.0" spacing="4.0">
                     <children>
                        <JFXButton buttonType="FLAT" onAction="#zoomOutPressed">
                           <graphic>
                              <ImageView fx:id="zoomOutPressed" fitHeight="24" pickOnBounds="true"
                                preserveRatio="true">
                                 <Image url="@/zoom_out-24px.png"/>
                              </ImageView>
                           </graphic>
                        </JFXButton>
                        <JFXSlider fx:id="zoomSlider" prefWidth="168.0"/>
                        <JFXButton buttonType="FLAT" onAction="#zoomInPressed">
                           <graphic>
                              <ImageView fitHeight="24" pickOnBounds="true" preserveRatio="true">
                                 <Image url="@/zoom_in-24px.png"/>
                              </ImageView>
                           </graphic>
                        </JFXButton>
                     </children>
                  </HBox>
                  <Label prefWidth="200.0"
                    text="Left-click to select a node or edge, right-click to add a node or edge"
                    wrapText="true"/>
                  <VBox fx:id="nodeSelectView" alignment="TOP_CENTER" spacing="8.0">
                     <children>
                        <GridPane>
                           <columnConstraints>
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"
                                prefWidth="100.0"/>
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"
                                prefWidth="100.0"/>
                           </columnConstraints>
                           <rowConstraints>
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                           </rowConstraints>
                           <children>
                              <Label text="Node ID"/>
                              <Label text="Node category" GridPane.rowIndex="1"/>
                              <JFXTextField fx:id="nodeIDField" GridPane.columnIndex="1">
                                 <validators>
                                    <RequiredFieldValidator message="Required"/>
                                 </validators>
                              </JFXTextField>
                              <JFXComboBox fx:id="nodeCategoryPicker" GridPane.columnIndex="1"
                                GridPane.rowIndex="1"/>
                              <Label text="Short name" GridPane.rowIndex="2"/>
                              <Label text="Long name" GridPane.rowIndex="3"/>
                              <JFXTextField fx:id="shortNameField" GridPane.columnIndex="1"
                                GridPane.rowIndex="2">
                                 <validators>
                                    <RequiredFieldValidator message="Required"/>
                                 </validators>
                              </JFXTextField>
                              <JFXTextField fx:id="longNameField" GridPane.columnIndex="1"
                                GridPane.rowIndex="3">
                                 <validators>
                                    <RequiredFieldValidator message="Required"/>
                                 </validators>
                              </JFXTextField>
                           </children>
                        </GridPane>
                        <HBox alignment="CENTER" spacing="8.0">
                           <children>
                              <Label text="Neighboring nodes"/>
                              <JFXButton buttonType="RAISED" onAction="#addNeighborPressed"
                                style="-fx-background-color: E5E5E5;">
                                 <graphic>
                                    <ImageView fitHeight="16" pickOnBounds="true"
                                      preserveRatio="true">
                                       <Image url="@/baseline_add_black_18dp.png"/>
                                    </ImageView>
                                 </graphic>
                              </JFXButton>
                              <JFXButton buttonType="RAISED" onAction="#removeNeighborPressed"
                                style="-fx-background-color: E5E5E5;">
                                 <graphic>
                                    <ImageView fitHeight="16" pickOnBounds="true"
                                      preserveRatio="true">
                                       <Image url="@/baseline_remove_black_18dp.png"/>
                                    </ImageView>
                                 </graphic>
                              </JFXButton>
                           </children>
                        </HBox>
                        <JFXListView fx:id="neighboringNodesList" prefHeight="77.0"
                          prefWidth="200.0"/>
                        <HBox alignment="TOP_CENTER" spacing="8.0">
                           <children>
                              <JFXButton buttonType="RAISED" onAction="#deleteNodePressed"
                                ripplerFill="#c30e0e" style="-fx-background-color: E5E5E5;"
                                text="Delete node"/>
                              <JFXButton buttonType="RAISED" onAction="#saveNodeChangesPressed"
                                ripplerFill="#3e9444" style="-fx-background-color: E5E5E5;"
                                text="Save changes"/>
                           </children>
                        </HBox>
                        <JFXButton buttonType="RAISED" onAction="#closeEditNodePressed"
                          style="-fx-background-color: E5E5E5;" text="Close"/>
                     </children>
                  </VBox>
               </children>
            </VBox>
         </children>
      </AnchorPane>
   </right>
</BorderPane>
