<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXSlider?>
<?import com.jfoenix.controls.JFXToggleButton?>
<?import edu.wpi.cs3733.d20.teamO.model.material.node_selector.NodeRequiredValidator?>
<?import edu.wpi.cs3733.d20.teamO.model.material.node_selector.NodeSelector?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<BorderPane fx:id="root" maxHeight="720.0" maxWidth="1280.0" prefHeight="720.0" prefWidth="1280.0"
  style="-fx-background-color: #acd7fd;" xmlns="http://javafx.com/javafx/11.0.1"
  xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="edu.wpi.cs3733.d20.teamO.view_model.kiosk.FindPathViewModel">
  <center>
    <AnchorPane fx:id="clipper">
      <fx:include fx:id="nodeMapView" source="/edu/wpi/cs3733/d20/teamO/views/NodeMapView.fxml"/>
    </AnchorPane>
  </center>
  <left>
    <AnchorPane fx:id="sideBar" prefHeight="200.0" prefWidth="200.0"
      style="-fx-background-color: FFFFFF;" BorderPane.alignment="CENTER">
      <children>
        <VBox alignment="TOP_CENTER" spacing="8.0">
          <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
          </padding>
          <children>
            <HBox alignment="CENTER" prefWidth="200.0" spacing="4.0">
              <fx:include source="/edu/wpi/cs3733/d20/teamO/views/FloorSelector.fxml"
                fx:id="floorSelector"/>
            </HBox>
            <HBox alignment="CENTER" prefWidth="200.0" spacing="4.0">
              <children>
                <JFXButton buttonType="FLAT" onAction="#zoomOutPressed">
                  <graphic>
                    <ImageView fitHeight="24" pickOnBounds="true" preserveRatio="true">
                      <Image url="@/zoom_out-24px.png"/>
                    </ImageView>
                  </graphic>
                </JFXButton>
                <JFXSlider fx:id="zoomSlider" onMouseDragOver="#setZoom" prefWidth="168.0"/>
                <JFXButton buttonType="FLAT" onAction="#zoomInPressed">
                  <graphic>
                    <ImageView fitHeight="24" pickOnBounds="true" preserveRatio="true">
                      <Image url="@/zoom_in-24px.png"/>
                    </ImageView>
                  </graphic>
                </JFXButton>
              </children>
            </HBox>
          </children>
        </VBox>
        <JFXButton buttonType="RAISED" layoutX="87.0" layoutY="373.0" onAction="#resetPath"
          style="-fx-background-color: lightgray" text="Clear"/>
        <NodeSelector fx:id="startLocation" promptText="%nodeSelectorPromptText" layoutX="14.0"
          layoutY="154.0">
          <validators>
            <NodeRequiredValidator message="%pathFindNodeError"/>
          </validators>
        </NodeSelector>
        <NodeSelector fx:id="stopLocation" promptText="%nodeSelectorPromptText" layoutX="18.0"
          layoutY="250.0">
          <validators>
            <NodeRequiredValidator message="%pathFindNodeError"/>
          </validators>
        </NodeSelector>
        <Label layoutX="18.0" layoutY="129.0" text="%pathFindStart"/>
        <Label layoutX="18.0" layoutY="233.0" text="%pathFindStop"/>
        <JFXToggleButton fx:id="handicap" layoutX="14.0" layoutY="452.0"
          onAction="#switchAccessibility" prefHeight="29.0" prefWidth="190.0"
          text="%pathFindHandicap"/>
        <JFXButton buttonType="RAISED" layoutX="20.0" layoutY="300.0" onAction="#generateQR"
          style="-fx-background-color: lightgray" text="Generate QR"/>
      </children>
    </AnchorPane>
  </left>
</BorderPane>
