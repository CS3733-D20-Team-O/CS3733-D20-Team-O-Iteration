<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import com.jfoenix.controls.JFXTextField?>
<?import com.jfoenix.validation.RequiredFieldValidator?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<AnchorPane prefHeight="720.0" prefWidth="1280.0" style="-fx-background-color: acd7fd;"
  xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="edu.wpi.cs3733.d20.teamO.view_model.kiosk.service_requests.MedicineDeliveryService">
  <children>
    <VBox fx:id="root" alignment="TOP_CENTER" layoutX="453.0" layoutY="190.0" spacing="32.0"
      style="-fx-background-color: FFFFFF;">
      <padding>
        <Insets bottom="16.0" left="16.0" right="16.0" top="16.0"/>
      </padding>
      <children>
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Medicine Delivery Request">
          <font>
            <Font size="18.0"/>
          </font>
        </Text>
        <HBox spacing="8.0">
          <children>
            <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
              <image>
                <Image url="/face-icon.png"/>
              </image>
            </ImageView>
            <JFXTextField fx:id="patientName" promptText="Your name">
              <validators>
                <RequiredFieldValidator message="Required"/>
              </validators>
            </JFXTextField>
            <ImageView fitHeight="24.0" fitWidth="24.0" layoutX="10.0" layoutY="10.0"
              pickOnBounds="true" preserveRatio="true">
              <image>
                <Image url="/hospital-icon.png"/>
              </image>
            </ImageView>
            <JFXTextField fx:id="medicationName" layoutX="218.0" layoutY="10.0"
              promptText="Medicine name">
              <validators>
                <RequiredFieldValidator message="Required"/>
              </validators>
            </JFXTextField>
          </children>
        </HBox>
        <HBox layoutX="18.0" layoutY="18.0" spacing="8.0">
          <children>
            <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
              <image>
                <Image url="/numbered-list-icon.png"/>
              </image>
            </ImageView>
            <JFXComboBox fx:id="floorNumber" promptText="Floor">
              <validators>
                <RequiredFieldValidator message="Required"/>
              </validators>
            </JFXComboBox>
            <ImageView fitHeight="24.0" fitWidth="24.0" layoutX="10.0" layoutY="10.0"
              pickOnBounds="true" preserveRatio="true">
              <image>
                <Image url="/location-icon.png"/>
              </image>
            </ImageView>
            <JFXComboBox fx:id="roomName" promptText="Room/Location on Floor">
              <validators>
                <RequiredFieldValidator message="Required"/>
              </validators>
            </JFXComboBox>
          </children>
        </HBox>
        <HBox alignment="TOP_CENTER" layoutX="18.0" layoutY="83.0" spacing="8.0">
          <children>
            <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
              <image>
                <Image url="/list-icon.png"/>
              </image>
            </ImageView>
            <JFXComboBox fx:id="deliveryMethod" promptText="Delivery method">
              <validators>
                <RequiredFieldValidator message="Required"/>
              </validators>
            </JFXComboBox>
          </children>
        </HBox>
        <JFXButton onAction="#submitRequest" text="Submit"/>
        <JFXButton layoutX="149.0" layoutY="253.0" onAction="#cancel" text="Cancel"/>
      </children>
    </VBox>
  </children>
</AnchorPane>
