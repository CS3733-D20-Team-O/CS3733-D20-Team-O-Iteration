<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" style="-fx-background-color: #acd7fd"
  xmlns:fx="http://javafx.com/fxml/1" prefHeight="720" prefWidth="1280"
  fx:controller="edu.wpi.cs3733.d20.teamO.view_model.kiosk.MainKioskViewModel">
  <VBox AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0"
    AnchorPane.rightAnchor="0" alignment="CENTER" spacing="64">
    <Label text="%mainWelcomeMessage" style="-fx-font-size: 48"/>
    <Label text="%mainQuestionPrompt" style="-fx-font-size: 36"/>
    <HBox alignment="CENTER" spacing="32">
      <JFXButton onAction="#openPathFinder" text="%mainLeftButton" style="-fx-font-size: 32"/>
      <JFXButton onAction="#openRequestScreen" text="%mainRightButton" style="-fx-font-size: 32"/>
    </HBox>
  </VBox>
  <HBox AnchorPane.leftAnchor="16" AnchorPane.bottomAnchor="16" spacing="16">
    <ImageView fitWidth="32" fitHeight="32">
      <Image url="@/language-icon.png"/>
    </ImageView>
    <JFXComboBox fx:id="languageSwitcher"/>
  </HBox>
</AnchorPane>
