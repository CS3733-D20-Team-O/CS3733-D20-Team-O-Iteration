<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" style="-fx-background-color: #acd7fd"
  xmlns:fx="http://javafx.com/fxml/1" prefHeight="720" prefWidth="1280" fx:id="root"
  fx:controller="edu.wpi.cs3733.d20.teamO.view_model.kiosk.MainKioskViewModel">

  <!-- Main Welcome Bar todo size and spacing -->
  <HBox alignment="CENTER" style="-fx-background-color: #004c8c" fx:id="welcomeBar"
    AnchorPane.topAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.leftAnchor="0">
    <Label text="%mainWelcomeMessage"
      style="-fx-font-size: 36; -fx-text-fill: floralwhite; -fx-padding: 16"/>
  </HBox>

  <!-- Wrapper to center the main content -->
  <VBox AnchorPane.topAnchor="48" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0"
    AnchorPane.rightAnchor="0" alignment="CENTER">
    <!-- The actual main content box todo blur background and various styling -->
    <VBox fx:id="contentContainer" alignment="CENTER" spacing="64" maxWidth="-Infinity"
      maxHeight="-Infinity"
      style="-fx-background-color: whitesmoke; -fx-background-radius: 16; -fx-opacity: 0.8; -fx-padding: 32">
      <Label text="%mainQuestionPrompt" style="-fx-font-size: 36"/>
      <VBox spacing="32" alignment="CENTER">
        <!-- Path finding todo separate label and button -->
        <JFXButton onAction="#openPathFinder" text="%mainLeftButton" style="-fx-font-size: 32"/>
        <!-- Service Request Creation -->
        <Label text="%serviceRequestCreationLabel" style="-fx-font-size: 32"/>
        <JFXComboBox promptText="%serviceRequestCreationPrompt" fx:id="serviceSelector"
          style="-fx-font-size: 24"/>
        <!-- Service Request Lookup/Modification -->
        <Label text="%serviceRequestLookupLabel" style="-fx-font-size: 32"/>
        <AnchorPane>
          <JFXTextField fx:id="confirmationCode" promptText="%serviceRequestConfirmationID"
            AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0"
            AnchorPane.rightAnchor="0"/>
          <JFXButton fx:id="lookupButton" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
            AnchorPane.rightAnchor="0" onAction="#lookupServiceRequest">
            <graphic>
              <ImageView fitHeight="32" pickOnBounds="true" preserveRatio="true">
                <Image url="@/forward-arrow.png"/>
              </ImageView>
            </graphic>
          </JFXButton>
        </AnchorPane>
      </VBox>
    </VBox>
  </VBox>

  <!-- Language Switcher -->
  <HBox fx:id="langContainer" AnchorPane.leftAnchor="16" AnchorPane.bottomAnchor="16" spacing="8"
    style="-fx-background-color: whitesmoke; -fx-background-radius: 24; -fx-padding: 8 16 8 8">
    <ImageView fitWidth="32" fitHeight="32">
      <Image url="@/language-icon.png"/>
    </ImageView>
    <JFXComboBox fx:id="languageSwitcher"/>
  </HBox>
</AnchorPane>
