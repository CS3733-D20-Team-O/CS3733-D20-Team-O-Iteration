<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import com.jfoenix.controls.JFXDatePicker?>
<?import com.jfoenix.controls.JFXRadioButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox prefHeight="400.0" prefWidth="600.0" stylesheets="@RoomSchedulerStyle.css"
  xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="edu.wpi.cs3733.d20.teamO.view_model.admin.RoomSchedulerViewModel">
   <children>
      <HBox alignment="CENTER" style="-fx-padding: 24; -fx-spacing: 32;">
         <children>
            <JFXDatePicker fx:id="datePicker" prefHeight="28.0" prefWidth="131.0"
              promptText="Date"/>
            <JFXComboBox prefHeight="25.0" prefWidth="127.0" promptText="Time">
               <items>
                  <FXCollections fx:factory="observableArrayList">
                     <String fx:value="12 AM"/>
                     <String fx:value="1 AM"/>
                     <String fx:value="2 AM"/>
                     <String fx:value="3 AM"/>
                     <String fx:value="4 AM"/>
                     <String fx:value="5 AM"/>
                     <String fx:value="6 AM"/>
                     <String fx:value="7 AM"/>
                     <String fx:value="8 AM"/>
                     <String fx:value="9 AM"/>
                     <String fx:value="10 AM"/>
                     <String fx:value="11 AM"/>
                     <String fx:value="12 PM"/>
                     <String fx:value="1 PM"/>
                     <String fx:value="2 PM"/>
                     <String fx:value="3 PM"/>
                     <String fx:value="4 PM"/>
                     <String fx:value="5 PM"/>
                     <String fx:value="6 PM"/>
                     <String fx:value="7 PM"/>
                     <String fx:value="8 PM"/>
                     <String fx:value="9 PM"/>
                     <String fx:value="10 PM"/>
                     <String fx:value="11 PM"/>
                  </FXCollections>
               </items>
            </JFXComboBox>
            <JFXButton fx:id="decTimeButton" buttonType="RAISED" onAction="#changeHour"
              style="-fx-background-color: lightgray;" text="&lt;"/>
            <JFXTextField fx:id="durationField" alignment="CENTER" prefHeight="25.0"
              prefWidth="68.0" text="0"/>
            <JFXButton fx:id="incTimeButton" buttonType="RAISED" onAction="#changeHour"
              style="-fx-background-color: lightgray;" text="&gt;"/>
         </children>
      </HBox>
      <HBox alignment="CENTER" style="-fx-spacing: 32; -fx-padding: 24;">
         <opaqueInsets>
            <Insets/>
         </opaqueInsets>
         <children>
            <JFXRadioButton text="On Call Bed"/>
            <JFXRadioButton text="Reflection Room 1"/>
            <JFXRadioButton text="Reflection Room 2"/>
            <JFXRadioButton text="Reflection Room 3"/>
         </children>
      </HBox>
      <HBox alignment="BOTTOM_RIGHT" style="-fx-padding: 24;">
         <children>
            <Label prefHeight="185.0" prefWidth="417.0" text="Label"/>
            <JFXButton fx:id="scheduleButton" buttonType="RAISED" onAction="#schedule"
              prefHeight="53.0" prefWidth="120.0" text="Schedule"/>
         </children>
      </HBox>
   </children>
</VBox>
