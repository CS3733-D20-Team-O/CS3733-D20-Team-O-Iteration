<?xml version="1.0" encoding="UTF-8"?>
<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox alignment="CENTER" spacing="32" xmlns:fx="http://javafx.com/fxml"
  style="-fx-padding: 32; -fx-font-size: 16"
  fx:controller="edu.wpi.cs3733.d20.teamO.view_model.admin.MainAdminViewModel">
  <Label text="%adminOptionsTitle" style="-fx-font-size: 36"/>
  <JFXButton onAction="#openFloorMapEditor" text="%accessFloorMapEditor" buttonType="RAISED"
    style="-fx-background-color: lightgray"/>
  <JFXButton onAction="#openServiceRequestHandler" text="%accessServiceRequestHandler"
    buttonType="RAISED" style="-fx-background-color: lightgray"/>
  <JFXButton onAction="#openImportExportHandler" text="%accessCSVIE" buttonType="RAISED"
    style="-fx-background-color: lightgray"/>
  <HBox spacing="16" alignment="CENTER">
    <Label text="%accessAlgorithms"/>
    <JFXComboBox fx:id="searchAlgorithms">
      <items>
        <FXCollections fx:factory="observableArrayList">
          <Label text="%aStar"/>
          <Label text="%bfs"/>
          <Label text="%dfs"/>
          <Label text="%dijkstra"/>
        </FXCollections>
      </items>
    </JFXComboBox>
  </HBox>
  <HBox alignment="CENTER" spacing="16">
    <Label text="%timeout"/>
    <Spinner fx:id="timeOutTime">
    </Spinner>
  </HBox>
  <HBox alignment="CENTER_RIGHT">
    <JFXButton text="%adminLogout" onAction="#close"/>
  </HBox>
</VBox>
