<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXCheckBox?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.TextFlow?>
<AnchorPane fx:id="root" maxHeight="1080.0" maxWidth="1920.0" prefHeight="800.0" prefWidth="1080.0"
  style="-fx-background-color: acd7fd;" xmlns="http://javafx.com/javafx/11.0.1"
  xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="edu.wpi.cs3733.d20.teamO.view_model.admin.RequestHandlerViewModel">
  <children>
    <VBox layoutX="14.0" layoutY="44.0" prefHeight="622.0" prefWidth="1035.0" spacing="20.0"
      AnchorPane.leftAnchor="14.0">
      <children>
        <TableView fx:id="serviceTable" onKeyReleased="#updateEmployeeTable"
          onMouseClicked="#updateEmployeeTable" prefHeight="285.0" prefWidth="1035.0">
          <columns>
            <TableColumn fx:id="colServiceType" prefWidth="72.0" text="Service"/>
            <TableColumn fx:id="colRequestTime" prefWidth="106.0" text="Request Time"/>
            <TableColumn fx:id="colRequestNode" prefWidth="98.0" text="Request Node"/>
            <TableColumn fx:id="colResquesterName" prefWidth="164.0" text="Requester Name"/>
            <TableColumn fx:id="colEmployeeAssigned" prefWidth="215.0" text="Employee"/>
            <TableColumn fx:id="colWhoMarked" prefWidth="226.0" text="Assigner"/>
            <TableColumn fx:id="colRequestID" prefWidth="149.0" text="Request ID"/>
          </columns>
        </TableView>
        <HBox spacing="20.0">
          <children>
            <VBox spacing="10.0">
              <children>
                <TableView fx:id="employeeTable" prefHeight="255.0" prefWidth="449.0">
                  <columns>
                    <TableColumn fx:id="empName" prefWidth="111.0" text="Name"/>
                    <TableColumn fx:id="empType" prefWidth="101.0" text="Type"/>
                    <TableColumn fx:id="empID" prefWidth="84.0" text="ID"/>
                    <TableColumn fx:id="empAvail" text="Available"/>
                  </columns>
                </TableView>
              </children>
            </VBox>
            <VBox prefHeight="266.0" prefWidth="419.0" spacing="20.0">
              <children>
                <!--                <JFXTextField fx:id="serviceMarker" prefHeight="25.0" prefWidth="277.0" promptText="Assigner Name" style="-fx-background-color: WHITE;" />-->
                <JFXButton buttonType="RAISED" onAction="#assignEmployee" prefHeight="41.0"
                  prefWidth="138.0" style="-fx-background-color: LIGHTGREY;"
                  text="Assign Employee"/>
                <JFXCheckBox fx:id="cbShowUnavail" onAction="#updateEmployeeTable" prefHeight="20.0"
                  prefWidth="138.0"
                  style="-fx-background-color: LIGHTGREY; -fx-border-color: BLACK;"
                  text="Show Unavailable"/>
                <VBox alignment="TOP_CENTER" prefHeight="135.0" prefWidth="347.0" spacing="10.0">
                  <children>
                    <HBox alignment="CENTER" prefHeight="103.0" prefWidth="347.0" spacing="20.0"
                      style="-fx-border-color: WHITE;">
                      <children>
                        <JFXButton fx:id="btnExportServiceReq" buttonType="RAISED"
                          onAction="#exportServiceRequest" prefHeight="49.0" prefWidth="142.0"
                          style="-fx-background-color: LIGHTGREY;" text="Export Service Requests"/>
                        <JFXTextField fx:id="exportServReqFilename" prefHeight="25.0"
                          prefWidth="173.0" promptText="Requests CSV filename"
                          style="-fx-background-color: WHITE;"/>
                      </children>
                    </HBox>
                    <HBox alignment="CENTER" prefHeight="89.0" prefWidth="347.0" spacing="20.0"
                      style="-fx-border-color: WHITE;">
                      <children>
                        <JFXButton fx:id="btnExportEmployee" buttonType="RAISED"
                          onAction="#exportEmployee" prefHeight="41.0" prefWidth="143.0"
                          style="-fx-background-color: LIGHTGREY;" text="Export Employees"/>
                        <JFXTextField fx:id="exportEmployeeFilename" prefHeight="25.0"
                          prefWidth="172.0" promptText="Employees CSVfilename"
                          style="-fx-background-color: WHITE;"/>
                      </children>
                    </HBox>
                  </children>
                </VBox>
              </children>
              <padding>
                <Insets top="30.0"/>
              </padding>
            </VBox>
            <TextFlow fx:id="stepLbl" prefHeight="266.0" prefWidth="343.0">
              <children>
                <Label prefHeight="13.0" prefWidth="272.0"
                  text="Step 1. Select a Service Request from the"/>
                <Label prefHeight="17.0" prefWidth="268.0" text=" Service Request table."/>
                <Label prefHeight="17.0" prefWidth="271.0"
                  text="Step 2. Select an available employee to be"/>
                <Label text=" asigned to the request from the Employee table"/>
                <Label text="Step 3. Click the Assign button to assign that "/>
                <Label text=" employee to the request. They won't be available "/>
                <Label text=" for other requests until it is completed."/>
              </children>
            </TextFlow>
          </children>
        </HBox>
      </children>
    </VBox>
  </children>
</AnchorPane>
