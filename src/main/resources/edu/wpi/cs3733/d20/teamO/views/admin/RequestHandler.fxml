<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXCheckBox?>
<?import com.jfoenix.controls.JFXTextArea?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.LinearGradient?>
<?import javafx.scene.paint.Stop?>
<?import javafx.scene.text.TextFlow?>
<AnchorPane fx:id="root" maxHeight="1080.0" maxWidth="1920.0" prefHeight="643.0" prefWidth="1280.0"
  style="-fx-background-color: acd7fd;" xmlns="http://javafx.com/javafx/11.0.1"
  xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="edu.wpi.cs3733.d20.teamO.view_model.admin.RequestHandlerViewModel">
  <children>
    <VBox layoutX="16.0" layoutY="16.0" prefHeight="617.0" prefWidth="1035.0" spacing="20.0"
      AnchorPane.leftAnchor="16.0" AnchorPane.rightAnchor="16.0" AnchorPane.topAnchor="16.0">
      <children>
        <TableView fx:id="serviceTable" onKeyReleased="#updateEmployeeTable"
          onMouseClicked="#updateEmployeeTable" prefHeight="236.0" prefWidth="1035.0">
          <columns>
            <TableColumn fx:id="colServiceType" prefWidth="72.0" text="Service"/>
            <TableColumn fx:id="colRequestTime" prefWidth="106.0" text="Request Time"/>
            <TableColumn fx:id="colRequestNode" prefWidth="98.0" text="Request Node"/>
            <TableColumn fx:id="colResquesterName" prefWidth="164.0" text="Requester Name"/>
            <TableColumn fx:id="colEmployeeAssigned" prefWidth="215.0" text="Employee"/>
            <TableColumn fx:id="colWhoMarked" prefWidth="226.0" text="Assigner"/>
            <TableColumn fx:id="colRequestID" prefWidth="149.0" text="Request ID"/>
            <TableColumn fx:id="colServiceStatus" prefWidth="114.0" text="Status"/>
            <TableColumn fx:id="colServiceData" prefWidth="103.0" text="Data" visible="false"/>
          </columns>
        </TableView>
        <HBox spacing="20.0" VBox.vgrow="ALWAYS">
          <children>
            <VBox spacing="10.0">
              <children>
                <TableView fx:id="employeeTable" prefHeight="304.0" prefWidth="406.0">
                  <columns>
                    <TableColumn fx:id="empName" prefWidth="111.0" text="Name"/>
                    <TableColumn fx:id="empType" prefWidth="101.0" text="Type"/>
                    <TableColumn fx:id="empID" prefWidth="77.0" text="ID"/>
                    <TableColumn fx:id="empAvail" prefWidth="83.0" text="Available"/>
                  </columns>
                </TableView>
                <JFXCheckBox fx:id="cbShowUnavail" onAction="#updateEmployeeTable" prefHeight="20.0"
                  prefWidth="138.0"
                  style="-fx-background-color: LIGHTGREY; -fx-border-color: BLACK;"
                  text="Show Unavailable"/>
              </children>
            </VBox>
            <VBox alignment="TOP_CENTER" prefHeight="413.0" prefWidth="313.0" spacing="16.0">
              <children>
                <JFXTextArea editable="false" prefHeight="140.0" prefWidth="313.0"
                  promptText="Select a request to view detailed information"
                  style="-fx-background-color: white; -fx-border-color: gray;"
                  unFocusColor="#bf9090">
                  <focusColor>
                    <LinearGradient endX="1.0" endY="1.0">
                      <stops>
                        <Stop color="#3918bf"/>
                        <Stop color="WHITE" offset="1.0"/>
                      </stops>
                    </LinearGradient>
                  </focusColor>
                </JFXTextArea>
                <!--                <JFXTextField fx:id="serviceMarker" prefHeight="25.0" prefWidth="277.0" promptText="Assigner Name" style="-fx-background-color: WHITE;" />-->
                <JFXButton buttonType="RAISED" onAction="#assignEmployee" prefHeight="41.0"
                  prefWidth="138.0" ripplerFill="#2200ff" style="-fx-background-color: LIGHTGREY;"
                  text="Assign Employee">
                  <VBox.margin>
                    <Insets/>
                  </VBox.margin>
                </JFXButton>
                <JFXButton buttonType="RAISED" layoutX="10.0" layoutY="185.0" prefHeight="41.0"
                  prefWidth="138.0" ripplerFill="#008221" style="-fx-background-color: LIGHTGREY;"
                  text="Resolve Request">
                  <VBox.margin>
                    <Insets/>
                  </VBox.margin>
                </JFXButton>
                <JFXButton buttonType="RAISED" layoutX="10.0" layoutY="226.0" prefHeight="41.0"
                  prefWidth="138.0" ripplerFill="#b90c0c" style="-fx-background-color: LIGHTGREY;"
                  text="Cancel Request">
                  <VBox.margin>
                    <Insets/>
                  </VBox.margin>
                </JFXButton>
              </children>
              <HBox.margin>
                <Insets/>
              </HBox.margin>
            </VBox>
            <TextFlow fx:id="stepLbl" prefHeight="266.0" prefWidth="343.0">
              <children>
                <Label prefHeight="13.0" prefWidth="272.0"
                  text="Step 1. Select a Service Request from the"/>
                <Label prefHeight="17.0" prefWidth="268.0" text=" Service Request table."/>
                <Label prefHeight="17.0" prefWidth="271.0"
                  text="Step 2. Select an available employee to be"/>
                <Label text=" asigned to the request from the Employee table"/>
                <Label text="Step 3. Click the Assign button to assign that "/>
                <Label text=" employee to the request. They won't be available "/>
                <Label text=" for other requests until it is completed."/>
              </children>
            </TextFlow>
          </children>
          <VBox.margin>
            <Insets right="16.0"/>
          </VBox.margin>
        </HBox>
      </children>
    </VBox>
  </children>
</AnchorPane>
